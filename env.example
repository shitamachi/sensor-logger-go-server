# 传感器日志服务器配置文件
# 复制此文件为 .env 并修改相应的值

# 服务器配置
SERVER_PORT=18000
SERVER_HOST=
# SERVER_HOST=0.0.0.0  # 监听所有网络接口

# MongoDB 数据库配置
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=sensor_logger
MONGO_TIMEOUT=10

# 应用配置
MAX_DATA_STORE=100
ENABLE_LOGGING=true
LOG_LEVEL=info
ENVIRONMENT=dev

# 文件存储配置
DATA_DIR=./data
ENABLE_FILE_LOG=true

# 生产环境示例配置
# SERVER_PORT=8080
# SERVER_HOST=0.0.0.0
# MONGO_URI=mongodb://username:password@mongodb.example.com:27017/sensor_logger?authSource=admin
# MONGO_DATABASE=sensor_logger_prod
# MONGO_TIMEOUT=30
# MAX_DATA_STORE=1000
# LOG_LEVEL=warn
# ENVIRONMENT=production
# DATA_DIR=/var/log/sensor-logger
# ENABLE_FILE_LOG=false 